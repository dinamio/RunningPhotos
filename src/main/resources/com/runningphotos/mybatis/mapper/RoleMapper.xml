<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.runningphotos.dao.RoleDao" >

    <resultMap type="com.runningphotos.bom.Role" id="RoleMap">
        <id column="id" property="id"  />
        <result column="role" property="name"/>
    </resultMap>

    <insert id="insert" parameterType="com.runningphotos.bom.Role" >
        INSERT INTO role
        (name)
        VALUES
        (#{name})
    </insert>

    <select id="selectAllRoles" resultMap="RoleMap">
        select * from role
    </select>
</mapper>